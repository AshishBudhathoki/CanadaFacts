<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTrendingRepo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/md_margin_padding_size_medium">

        <ImageView
            android:id="@+id/ivPlaceholderImage"
            android:layout_width="@dimen/dimen_image"
            android:layout_height="@dimen/dimen_image"
            android:contentDescription="@string/content_desc_image"
            android:paddingLeft="@dimen/md_margin_padding_size_small"
            android:src="@drawable/drawable_placeholder_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/placeholderTitle"
            android:layout_width="96dp"
            android:layout_height="@dimen/md_margin_padding_size_small"
            android:background="@drawable/drawable_placeholder_rectangle"
            android:lines="1"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/md_text_size_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFont="regular" />


        <View
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="@dimen/md_margin_padding_size_small"
            android:layout_marginTop="@dimen/md_margin_padding_size_medium"
            android:background="@drawable/drawable_placeholder_rectangle"
            android:textColor="@color/colorGrey800"
            android:textSize="@dimen/md_text_size_micro"
            app:layout_constraintEnd_toStartOf="@+id/ivPlaceholderImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/placeholderTitle"
            app:textFont="regular" />

        <View
            android:id="@+id/tvDescription1"
            android:layout_width="0dp"
            android:layout_height="@dimen/md_margin_padding_size_small"
            android:layout_marginTop="@dimen/md_margin_padding_size_small"
            android:background="@drawable/drawable_placeholder_rectangle"
            android:textColor="@color/colorGrey800"
            android:textSize="@dimen/md_text_size_micro"
            app:layout_constraintEnd_toStartOf="@+id/ivPlaceholderImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:textFont="regular" />

        <View
            android:id="@+id/tvDescription2"
            android:layout_width="0dp"
            android:layout_height="@dimen/md_margin_padding_size_small"
            android:layout_marginTop="@dimen/md_margin_padding_size_small"
            android:background="@drawable/drawable_placeholder_rectangle"
            android:textColor="@color/colorGrey800"
            android:textSize="@dimen/md_text_size_micro"
            app:layout_constraintEnd_toStartOf="@+id/ivPlaceholderImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription1"
            app:textFont="regular" />

        <View
            android:id="@+id/tvDescription3"
            android:layout_width="0dp"
            android:layout_height="@dimen/md_margin_padding_size_small"
            android:layout_marginTop="@dimen/md_margin_padding_size_small"
            android:background="@drawable/drawable_placeholder_rectangle"
            android:textColor="@color/colorGrey800"
            android:textSize="@dimen/md_text_size_micro"
            app:layout_constraintEnd_toStartOf="@+id/ivPlaceholderImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription2"
            app:textFont="regular" />

        <View
            android:id="@+id/tvDescription4"
            android:layout_width="0dp"
            android:layout_height="@dimen/md_margin_padding_size_small"
            android:layout_marginTop="@dimen/md_margin_padding_size_small"
            android:background="@drawable/drawable_placeholder_rectangle"
            android:textColor="@color/colorGrey800"
            android:textSize="@dimen/md_text_size_micro"
            app:layout_constraintEnd_toStartOf="@+id/ivPlaceholderImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription3"
            app:textFont="regular" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
